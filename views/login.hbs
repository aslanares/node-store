<div class="container pt-5">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login</h1>
            <form action="" method="POST">
                <div class="form-group">
                    <label for="user_email">Email</label>
                    <input type="email" class="input form-control" name="_email" autocomplete="off" id="user_email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="user_pass">Password</label>
                    <input type="password" class="input form-control" name="_password" id="user_pass" placeholder="Enter new password">
                </div>
                <div class="form-group">
                    {{#if error}}
                        <div class="err-msg">{{error}}</div>
                    {{/if}}
                </div>
                <div class="form-group d-flex">
                    <input type="submit" class="btn btn-warning mr-3" value="Login">
                    <div class="link"><a class="btn btn-warning" href="./signup">Sign Up</a></div>
                </div>
            </form>
        </div>
    </div>
</div>