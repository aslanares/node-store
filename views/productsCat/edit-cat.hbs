<div class="container pt-5">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-edit"></span> {{{title}}}</h1>
            {{#each single_cat}}
            <form action="/admin/products-cat/edit-cat" method="POST">
                <input type="hidden" name="id" value="{{this.id}}" />
                <div class="form-group">
                    <label for="cat_name">Category Name</label>
                    <input type="text" class="input form-control" value="{{this.cat_name}}" name="cat_name" placeholder="Enter product category">
                </div>
                <div class="form-group d-flex">
                    <input type="submit" class="btn btn-warning mr-3" value="Edit">
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>