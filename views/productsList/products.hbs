<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-12">
            <div class="products-list">
                <div class="table-responsive">
                    <div class="d-flex justify-content-between">
                        <h3>{{{title}}}</h3>
                        <div class="d-flex">
                            <p class="mr-2"><a class="btn btn-secondary" href="profile"><span class="fa fa-chevron-left"></span>&nbspBack to Profile</a></p>
                            <p><a class="btn btn-primary" href="products/create">Create new product</a></p>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr><th>â„–</th><th>Name</th><th>Description</th><th>Price</th><th>Image</th><th>Gallery</th><th></th></tr>
                        </tbody>
                        <tbody>
                        {{#each products_list}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.prod_name}}</td>
                                <td class="long-cell">{{this.prod_desc}}</td>
                                <td>{{this.prod_price}}</td>
                                <td>{{this.prod_image}}</td>
                                <td class="long-cell">{{this.prod_gallery}}</td>
                                <td>
                                    <a class="btn btn-warning mb-2" href="products/edit/{{this.id}}">Edit</a>
                                    <form action="products/delete/{{this.id}}" method="POST" style="display:inline;">
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>