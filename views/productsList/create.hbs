<div class="container pt-5">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-shopping-basket"></span> {{{title}}}</h1>
            <form method="POST">
                <div class="form-group">
                    <label for="product_name">Product Name</label>
                    <input type="text" class="input form-control" name="product_name" placeholder="Enter product name">
                </div>
                <div class="form-group">
                    <label for="product_desc">Product Description</label>
                    <textarea class="form-control" name="product_desc" placeholder="Enter product description"></textarea>
                </div>
                <div class="form-group">
                    <label for="product_price">Product Price</label>
                    <input type="text" class="input form-control" name="product_price" placeholder="Enter product price">
                </div>
                <div class="form-group">
                    <label for="product_image">Product Image</label>
                    <input type="text" class="input form-control" name="product_image" placeholder="Enter product image">
                </div>
                <div class="form-group">
                    <label for="product_gallery">Product Gallery</label>
                    <textarea class="form-control" name="product_gallery" placeholder="Enter product gallery"></textarea>
                </div>
                <div class="form-group">
                    <label for="product_num">Product Amount</label>
                    <input type="text" class="input form-control" name="product_num" placeholder="Enter product amount">
                </div>
                <div class="form-group mb-5 pb-2">
                    <label for="cat_name">Product Category</label>
                    <select class="form-select" name="cat_name">
                    {{#each prod_cat}}
                      <option value="{{this.id}}">{{this.cat_name}}</option>
                    {{/each}}
                    </select>
                </div>
                <div class="form-group mb-5 pb-2">
                    <label for="cat_name">Product Brand</label>
                    <select class="form-select" name="brand_name">
                    {{#each prod_brand}}
                      <option value="{{this.id}}">{{this.brand_name}}</option>
                    {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-warning mr-3" value="Create">
                </div>
            </form>
        </div>
    </div>
</div>