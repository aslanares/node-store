<div class="container pt-5">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-edit"></span> {{{title}}}</h1>
            {{#each single_product}}
            <form action="/admin/products/edit" method="POST">
                <input type="hidden" name="id" value="{{this.id}}" />
                <div class="form-group">
                    <label for="product_name">Product Name</label>
                    <input type="text" class="input form-control" value="{{this.prod_name}}" name="product_name" placeholder="Enter product name">
                </div>
                <div class="form-group">
                    <label for="product_desc">Product Description</label>
                    <textarea class="form-control" name="product_desc" placeholder="Enter product description">{{this.prod_desc}}</textarea>
                </div>
                <div class="form-group">
                    <label for="product_price">Product Price</label>
                    <input type="text" class="input form-control" value="{{this.prod_price}}" name="product_price" placeholder="Enter product price">
                </div>
                <div class="form-group">
                    <label for="product_image">Product Image</label>
                    <input type="text" class="input form-control" value="{{this.prod_image}}" name="product_image" placeholder="Enter product image">
                </div>
                <div class="form-group">
                    <label for="product_gallery">Product Gallery</label>
                    <textarea class="form-control" name="product_gallery" placeholder="Enter product gallery">{{this.prod_gallery}}</textarea>
                </div>
                <div class="form-group">
                    <label for="product_num">Product Amount</label>
                    <input type="text" class="input form-control" value="{{this.prod_num}}" name="product_num" placeholder="Enter product image">
                </div>
                <div class="form-group mb-5 pb-2">
                    <label for="cat_name">Current Product Category - {{this.cat_name}}</label>
                    <select class="form-select" name="cat_name">
                        {{#each ../prod_cat}}
                             <option value="{{this.id}}">{{this.cat_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group mb-5 pb-2">
                    <label for="cat_name">Current Product Brand - {{this.brand_name}}</label>
                    <select class="form-select" name="brand_name">
                        {{#each ../prod_brand}}
                          <option value="{{this.id}}">{{this.brand_name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group d-flex">
                    <input type="submit" class="btn btn-warning mr-3" value="Edit">
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>