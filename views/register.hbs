<div class="container pt-5">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <form action="" method="POST">
                <div class="form-group">
                    <label htmlFor="user_name">Name</label>
                    <input type="text" className="input" class="form-control" name="_name" autoComplete="off" id="user_name"
                       placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label htmlFor="user_email">Email</label>
                    <input type="email" className="input" class="form-control" name="_email" autoComplete="off" id="user_email"
                           placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label htmlFor="user_pass">Password</label>
                    <input type="password" className="input" class="form-control" name="_password" id="user_pass"
                           placeholder="Enter new password">
                </div>
                <div class="form-group">
                    {{#if msg}}
                        <div class="success-msg">{{msg}}</div>
                    {{/if}}

                    {{#if error}}
                        <div class="err-msg">{{error}}</div>
                    {{/if}}
                </div>
                <div class="form-group d-flex">
                    <input type="submit" class="btn btn-warning mr-3" value="Sign Up">
                    <div class="link"><a class="btn btn-warning" href="./login">Login</a></div>
                </div>
            </form>
        </div>
    </div>
</div>